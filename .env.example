# ─── Database ─────────────────────────────────────────────────────────────────
# On Railway: automatically injected by the Postgres plugin — do not set manually.
DATABASE_URL="postgresql://user:password@localhost:5432/medialane"

# ─── Starknet ─────────────────────────────────────────────────────────────────
STARKNET_NETWORK="mainnet"
# Get your key at https://dashboard.alchemy.com — use the Starknet Mainnet app
ALCHEMY_RPC_URL="https://starknet-mainnet.g.alchemy.com/starknet/version/rpc/v0_10/YOUR_API_KEY"
VOYAGER_API_KEY=""

# ─── Contract Addresses ───────────────────────────────────────────────────────
# These are the deployed mainnet contracts — only change for testnet.
MARKETPLACE_CONTRACT_MAINNET="0x059deafbbafbf7051c315cf75a94b03c5547892bc0c6dfa36d7ac7290d4cc33a"
COLLECTION_CONTRACT_MAINNET="0x05e73b7be06d82beeb390a0e0d655f2c9e7cf519658e04f05d9c690ccc41da03"
INDEXER_START_BLOCK=6204232

# ─── Pinata / IPFS ────────────────────────────────────────────────────────────
# Get your JWT at https://app.pinata.cloud/developers/api-keys
PINATA_JWT="your-pinata-jwt"
PINATA_GATEWAY="your-gateway.mypinata.cloud"

# ─── Server ───────────────────────────────────────────────────────────────────
# On Railway: PORT is injected automatically — do not set manually.
PORT=3000
# Generate a strong secret: openssl rand -hex 32
API_SECRET_KEY="change-me-in-production"
# Comma-separated list of allowed CORS origins
CORS_ORIGINS="https://medialane.xyz,https://mediolano.app,http://localhost:3001"

# ─── Indexer ──────────────────────────────────────────────────────────────────
INDEXER_POLL_INTERVAL_MS=6000
INDEXER_BLOCK_BATCH_SIZE=500

# ─── ChipiPay (optional) ──────────────────────────────────────────────────────
CHIPIPAY_API_KEY=
CHIPIPAY_API_URL=

# ─── Logging ──────────────────────────────────────────────────────────────────
LOG_LEVEL="info"
