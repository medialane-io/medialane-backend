generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IndexerCursor {
  id                String   @id @default("singleton")
  lastBlock         BigInt
  continuationToken String?
  updatedAt         DateTime @updatedAt
}

enum OrderStatus {
  ACTIVE
  FULFILLED
  CANCELLED
  EXPIRED
}

model Order {
  id                       String      @id @default(cuid())
  orderHash                String      @unique
  offerer                  String
  // Offer item fields
  offerItemType            Int
  offerToken               String
  offerIdentifier          String
  offerStartAmount         String
  offerEndAmount           String
  // Consideration item fields
  considerationItemType    Int
  considerationToken       String
  considerationIdentifier  String
  considerationStartAmount String
  considerationEndAmount   String
  considerationRecipient   String
  // Time bounds
  startTime                BigInt
  endTime                  BigInt
  // Status
  status                   OrderStatus @default(ACTIVE)
  fulfiller                String?
  // On-chain provenance
  createdBlockNumber       BigInt
  createdTxHash            String
  fulfilledTxHash          String?
  cancelledTxHash          String?
  // Denormalized (filled by orchestrator)
  nftContract              String?
  nftTokenId               String?
  priceRaw                 String?
  priceFormatted           String?
  currencySymbol           String?
  // Relations
  token                    Token?      @relation(fields: [nftContract, nftTokenId], references: [contractAddress, tokenId])
  createdAt                DateTime    @default(now())
  updatedAt                DateTime    @updatedAt

  @@index([offerer])
  @@index([status])
  @@index([nftContract, nftTokenId])
}

enum MetadataStatus {
  PENDING
  FETCHING
  FETCHED
  FAILED
}

model Token {
  id              String         @id @default(cuid())
  contractAddress String
  tokenId         String
  owner           String
  tokenUri        String?
  metadataStatus  MetadataStatus @default(PENDING)
  name            String?
  description     String?
  image           String?
  attributes      Json?
  ipType          String?
  licenseType     String?
  commercialUse   Boolean?
  author          String?
  transfers       Transfer[]
  activeOrders    Order[]
  collection      Collection?    @relation(fields: [contractAddress], references: [contractAddress])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@unique([contractAddress, tokenId])
  @@index([owner])
  @@index([contractAddress])
}

model Collection {
  id              String   @id @default(cuid())
  contractAddress String   @unique
  name            String?
  startBlock      BigInt
  isKnown         Boolean  @default(false)
  floorPrice      String?
  totalVolume     String?
  holderCount     Int      @default(0)
  totalSupply     Int      @default(0)
  tokens          Token[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Transfer {
  id              String   @id @default(cuid())
  contractAddress String
  tokenId         String
  fromAddress     String
  toAddress       String
  blockNumber     BigInt
  txHash          String
  logIndex        Int
  token           Token    @relation(fields: [contractAddress, tokenId], references: [contractAddress, tokenId])
  createdAt       DateTime @default(now())

  @@unique([txHash, logIndex])
  @@index([contractAddress, tokenId])
  @@index([toAddress])
  @@index([fromAddress])
}

enum JobType {
  METADATA_FETCH
  METADATA_PIN
  STATS_UPDATE
  WEBHOOK_DELIVER
}

enum TenantPlan {
  FREE
  PREMIUM
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
}

enum ApiKeyStatus {
  ACTIVE
  REVOKED
}

enum WebhookEventType {
  ORDER_CREATED
  ORDER_FULFILLED
  ORDER_CANCELLED
  TRANSFER
}

enum WebhookEndpointStatus {
  ACTIVE
  DISABLED
}

enum JobStatus {
  PENDING
  PROCESSING
  DONE
  FAILED
}

model Job {
  id           String    @id @default(cuid())
  type         JobType
  status       JobStatus @default(PENDING)
  payload      Json
  attempts     Int       @default(0)
  maxAttempts  Int       @default(3)
  error        String?
  processAfter DateTime  @default(now())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([status, processAfter])
}

enum IntentType {
  CREATE_LISTING
  MAKE_OFFER
  FULFILL_ORDER
  CANCEL_ORDER
}

enum IntentStatus {
  PENDING
  SIGNED
  SUBMITTED
  CONFIRMED
  FAILED
  EXPIRED
}

model TransactionIntent {
  id        String       @id @default(cuid())
  type      IntentType
  status    IntentStatus @default(PENDING)
  requester String
  typedData Json
  calls     Json
  signature String[]
  txHash    String?
  orderHash String?
  expiresAt DateTime
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([requester])
  @@index([status])
}

model MetadataCache {
  id          String   @id @default(cuid())
  uri         String   @unique
  resolvedUrl String?
  content     Json?
  fetchedAt   DateTime
  ttlSeconds  Int      @default(86400)
  createdAt   DateTime @default(now())
}

model Tenant {
  id        String        @id @default(cuid())
  name      String
  email     String        @unique
  plan      TenantPlan    @default(FREE)
  status    TenantStatus  @default(ACTIVE)
  apiKeys   ApiKey[]
  webhooks  WebhookEndpoint[]
  usageLogs UsageLog[]
  auditLogs AuditLog[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([status])
  @@index([plan])
}

model ApiKey {
  id          String       @id @default(cuid())
  tenantId    String
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  prefix      String
  keyHash     String       @unique
  label       String       @default("")
  status      ApiKeyStatus @default(ACTIVE)
  lastUsedAt  DateTime?
  usageLogs   UsageLog[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([tenantId])
  @@index([status])
}

model WebhookEndpoint {
  id        String                @id @default(cuid())
  tenantId  String
  tenant    Tenant                @relation(fields: [tenantId], references: [id])
  url       String
  secret    String
  events    WebhookEventType[]
  status    WebhookEndpointStatus @default(ACTIVE)
  deliveries WebhookDelivery[]
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  @@index([tenantId])
  @@index([status])
}

model WebhookDelivery {
  id           String           @id @default(cuid())
  endpointId   String
  endpoint     WebhookEndpoint  @relation(fields: [endpointId], references: [id])
  jobId        String?
  eventType    WebhookEventType
  payload      Json
  statusCode   Int?
  responseBody String?
  deliveredAt  DateTime?
  createdAt    DateTime         @default(now())

  @@index([endpointId])
  @@index([eventType])
}

model UsageLog {
  id         String   @id @default(cuid())
  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  apiKeyId   String
  apiKey     ApiKey   @relation(fields: [apiKeyId], references: [id])
  method     String
  path       String
  statusCode Int
  latencyMs  Int
  createdAt  DateTime @default(now())

  @@index([tenantId, createdAt])
  @@index([apiKeyId, createdAt])
}

model AuditLog {
  id        String   @id @default(cuid())
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  actorType String
  actor     String
  action    String
  detail    Json?
  createdAt DateTime @default(now())

  @@index([tenantId, createdAt])
  @@index([action])
}
